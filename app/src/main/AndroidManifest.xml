<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.trainsystem.upperlimb.senior.handtrainsystem">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.trainsystem.upperlimb.senior.handtrainsystem2.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.trainsystem.upperlimb.senior.handtrainsystem2.Game"
            android:screenOrientation="landscape"/>
        <activity
            android:name="com.trainsystem.upperlimb.senior.handtrainsystem2.Game2"
            android:screenOrientation="landscape"/>
        <activity
            android:name="com.trainsystem.upperlimb.senior.handtrainsystem2.Game3"
            android:screenOrientation="landscape"/>
        <activity android:name="com.trainsystem.upperlimb.senior.handtrainsystem2.DatabaseActivity">
        </activity>
        <activity android:name="com.trainsystem.upperlimb.senior.handtrainsystem2.RecordActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>