<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/secretAcross"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#44ff0000"
        android:gravity="top"
        android:orientation="horizontal"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="100%">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bar"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/middle_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top"
        android:orientation="horizontal"
        app:layout_heightPercent="4%"
        app:layout_widthPercent="100%">
    </LinearLayout>


    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/middle_top"
        android:orientation="horizontal"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="100%">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/git_game1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/game1"
                android:onClick="OnGame1"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/git_game2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/game2"
                android:onClick="OnGame2"/>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/middle_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/middle"
        android:orientation="horizontal"
        app:layout_heightPercent="6%"
        app:layout_widthPercent="100%">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="握力運動"
                android:textSize="25sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="上肢運動"
                android:textSize="25sp"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/middle_bottom"
        android:gravity="top"
        android:orientation="horizontal"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="100%">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/git_gameˇ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/game3"
                android:onClick="OnGame3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/git_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/record"
                android:onClick="OnRecord"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/botton_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bottom"
        android:orientation="horizontal"
        app:layout_heightPercent="6%"
        app:layout_widthPercent="100%">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="伸展運動"
                android:textSize="25sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="個人紀錄"
                android:textSize="25sp"/>

        </LinearLayout>


    </LinearLayout>


</android.support.percent.PercentRelativeLayout>